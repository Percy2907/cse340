<main class="account-management">
  <h1><%= title %></h1>

  <!-- Flash messages -->
  <%- messages() %>

  <!-- Greeting with first name -->
  <% if (locals.accountData) { %>
  <h2>Welcome <%= locals.accountData.account_firstname %></h2>
  <p>You're logged in</p>
<% } %>

  <!-- Update Account Information Link (visible for all logged-in users) -->
  <p>
    <a href="/account/update/<%= locals.accountData.account_id %>" title="Update account information">
      Update Account Information
    </a>
  </p>

  <!-- Inventory Management (only for Employee or Admin) -->
  <% if (locals.accountData && (locals.accountData.account_type === 'Employee' || locals.accountData.account_type === 'Admin')) { %>
    <h3>Inventory Management</h3>
    <p>
      <a href="/inv/" title="Manage Inventory">
        Manage Inventory
      </a>
    </p>
  <% } %>
</main>