<% } else { res.redirect('/'); } %>

<%- grid %>

<!-- Reviews Section -->
<section class="vehicle-reviews">
  <div class="reviews-header">
    <h2>Customer Reviews</h2>
    
    <% if (reviewCount > 0) { %>
      <div class="average-rating">
        <div class="rating-stars">
          <% for(let i = 1; i <= 5; i++) { %>
            <span class="<%= i <= Math.round(avgRating) ? 'star-filled' : 'star-empty' %>">★</span>
          <% } %>
        </div>
        <span class="rating-text"><%= parseFloat(avgRating).toFixed(1) %> out of 5</span>
        <span class="review-count">(<%= reviewCount %> <%= reviewCount === 1 ? 'review' : 'reviews' %>)</span>
      </div>
    <% } else { %>
      <p class="no-rating">No reviews yet. Be the first to review this vehicle!</p>
    <% } %>
  </div>

  <!-- Add Review Button (only for logged in users) -->
  <% if (locals.loggedin) { %>
    <div class="review-action">
      <% if (userReviewId) { %>
        <a href="/review/edit/<%= userReviewId %>" class="btn-primary">Edit Your Review</a>
      <% } else { %>
        <a href="/review/add/<%= inv_id %>" class="btn-primary">Write a Review</a>
      <% } %>
    </div>
  <% } else { %>
    <div class="review-action">
      <p class="login-prompt">
        <a href="/account/login">Log in</a> to write a review
      </p>
    </div>
  <% } %>

  <!-- Display Reviews -->
  <% if (reviews && reviews.length > 0) { %>
    <div class="reviews-list">
      <% reviews.forEach(review => { %>
        <div class="review-item">
          <div class="review-header-item">
            <div class="reviewer-info">
              <strong><%= review.account_firstname %> <%= review.account_lastname.charAt(0) %>.</strong>
              <span class="review-date">
                <%= new Date(review.review_date).toLocaleDateString('en-US', { 
                  year: 'numeric', 
                  month: 'long', 
                  day: 'numeric' 
                }) %>
              </span>
            </div>
            <div class="review-rating-small">
              <% for(let i = 1; i <= 5; i++) { %>
                <span class="<%= i <= review.review_rating ? 'star-filled' : 'star-empty' %>">★</span>
              <% } %>
            </div>
          </div>
          <div class="review-text-content">
            <p><%= review.review_text %></p>
          </div>
          
          <!-- Show edit/delete buttons only for the review owner -->
          <% if (locals.loggedin && locals.accountData.account_id === review.account_id) { %>
            <div class="review-owner-actions">
              <a href="/review/edit/<%= review.review_id %>" class="btn-edit-small">Edit</a>
              <a href="/review/delete/<%= review.review_id %>" class="btn-delete-small">Delete</a>
            </div>
          <% } %>
        </div>
      <% }) %>
    </div>
  <% } else { %>
    <div class="no-reviews-msg">
      <p>No reviews yet for this vehicle.</p>
    </div>
  <% } %>
</section>

